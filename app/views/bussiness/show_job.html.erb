  <div class="st_content">
        
        <table>
          <tr>
            <th>날짜</th>
            <td><%= @job.date %> </td>
          </tr>
          
          
          <tr>
            <th>시간</th>
            <td><%= @job.time_start %>시 ~ <%= @job.time_end %>시</td>
          </tr>
          
          
          <tr>
            <th>시급 </th>
            <td>
              <%= @job.pay %>원 <span class="total">예상 지급 : 300,000원</span></td>
