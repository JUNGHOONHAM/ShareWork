<script>
  function createToast(t) {
    switch (t) {
      case 'danger':
        $.toast('지원 취소', {
          //sticky: true,
          duration: 2000,
          type: 'danger'
        });
        return;
    }
  }
  
  $(function() {
    $('.danger').on('click', function(){
      var id = $(this).data('id');
      
      $.post('/active/appriedCancel', { id: id }, 
      function(returnedData){
           console.log(returnedData);
      }).fail(function(){
        alert('error');
      }).done(function(){
        window.location.reload();
        createToast($(this).attr('class'));
      });
    });
  });
</script>


